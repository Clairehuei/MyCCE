<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codekitchen.allen.mycce.Activity_Surface">


    <com.codekitchen.allen.mycce.DrawTest
        android:id="@+id/olaview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左"
        android:id="@+id/btnLeft"
        android:layout_marginBottom="56dp"
        android:layout_alignBottom="@+id/olaview"
        android:layout_toStartOf="@+id/btnRight"
        android:layout_marginEnd="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右"
        android:id="@+id/btnRight"
        android:layout_marginEnd="64dp"
        android:layout_alignTop="@+id/btnLeft"
        android:layout_alignEnd="@+id/olaview" />


</RelativeLayout>
