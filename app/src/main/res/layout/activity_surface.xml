<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codekitchen.allen.mycce.Activity_Surface">


    <com.codekitchen.allen.mycce.DrawTest
        android:id="@+id/olaview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左"
        android:id="@+id/btnLeft"
        android:layout_marginBottom="54dp"
        android:layout_alignBottom="@+id/olaview"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右"
        android:id="@+id/btnRight"
        android:layout_alignTop="@+id/btnLeft"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上"
        android:id="@+id/btnUp"
        android:layout_above="@+id/btnLeft"
        android:layout_alignStart="@+id/btnDown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下"
        android:id="@+id/btnDown"
        android:layout_below="@+id/btnRight"
        android:layout_alignEnd="@+id/btnRight"
        android:layout_marginEnd="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skill"
        android:id="@+id/btnSkill"
        android:layout_alignBottom="@+id/btnRight"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
